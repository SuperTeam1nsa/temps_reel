@startuml
skinparam monochrome true
start
while ()
	:status = monitor.Open();
	if (status) then (failed)
		:print("Unable to start server");
	stop
	else (succeed)
		:monitorCom = true;
		:monitor.AcceptClient();
		:serverOk!;
		:monitorDisconnected?;
		:monitorCom = false;
		:robotStarted = false;
		:robot.write(new Message(STOP_MOVE));
		:closeComRobot!;
		:endAskArena!;
		:cameroOn = false;
	endif
endwhile
stop
@enduml
